  {Font definition of Google Noto Font family (CTEX)}
\ProvidesExplFile{ctex-fontset-noto.def}
  {\ExplFileDate}{2.4.16}{\ExplFileDescription}
\sys_if_engine_pdftex:TF
  { \ctex_fontset_error:n { noto } }
  {
    \sys_if_engine_uptex:TF
      { \ctex_fontset_error:n { noto } }
      {
        \setCJKmainfont
          [
               UprightFont = *~Light ,
                  BoldFont = *~Medium ,
                ItalicFont = 方正楷体_GBK ,
            BoldItalicFont = 方正新楷体_GBK
          ] { Noto~Serif~CJK~SC }
        \setCJKsansfont 
          [
            BoldFont = *~Medium
          ] { Noto~Sans~CJK~SC }
        \setCJKmonofont
          [
            BoldFont = 方正刻本仿宋简体
          ] { 方正仿宋_GBK }
        \setCJKfamilyfont { zhsong }
          [
               UprightFont = *~Light ,
                  BoldFont = *~Medium
          ] { Noto~Serif~CJK~SC }
        \setCJKfamilyfont { zhhei }  { Noto~Sans~CJK~SC }
        \setCJKfamilyfont { zhpf }   { Noto~Sans~CJK~SC }
        \setCJKfamilyfont { zhfs }   { 方正仿宋_GBK }
\setCJKfamilyfont { zhkai }  { 方正楷体_GBK }
      }
  }
\NewDocumentCommand \songti   { } { \CJKfamily { zhsong } }
\NewDocumentCommand \heiti    { } { \CJKfamily { zhhei } }
\NewDocumentCommand \fangsong { } { \CJKfamily { zhfs } }
\NewDocumentCommand \kaishu   { } { \CJKfamily { zhkai } }
\NewDocumentCommand \yahei    { } { \CJKfamily { zhpf } }
\NewDocumentCommand \pingfang { } { \CJKfamily { zhpf } }
